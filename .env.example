# Stock Analysis Framework - Environment Variables
# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file to version control

# Alpha Vantage API
# Get free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Financial Modeling Prep API (Optional)
# Get API key at: https://financialmodelingprep.com/developer/docs/
FMP_API_KEY=your_fmp_key_here

# Database Configuration (if using)
DATABASE_URL=sqlite:///data/stock_analysis.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/stock_analysis.log

# Data Storage Paths
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
OVERRIDE_LOG_PATH=logs/overrides
QUARTERLY_REVIEW_PATH=logs/quarterly_reviews

# Model Configuration
# These are defaults - override in config/settings.yaml if needed
DEFAULT_UNIVERSE_SIZE=500
FUNDAMENTAL_WEIGHT=0.45
TECHNICAL_WEIGHT=0.35
SENTIMENT_WEIGHT=0.20

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=5
REQUEST_DELAY_SECONDS=1

# Override Limits
MAX_WEIGHT_ADJUSTMENT=0.10
MAX_SENTIMENT_ADJUSTMENT=15
MAX_COMPOSITE_IMPACT=12
